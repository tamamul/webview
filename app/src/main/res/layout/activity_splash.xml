<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:padding="24dp">

    <!-- Background gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Logo Center -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"
        android:elevation="8dp" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="SMK MAARIF 9"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:shadowColor="#80000000"
        android:shadowRadius="4"
        android:shadowDy="2"
        android:elevation="4dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Selamat Datang"
        android:textSize="18sp"
        android:textColor="@color/light_blue"
        android:alpha="0.9" />

    <!-- Loading Container -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/loading_background"
        android:elevation="12dp">

        <!-- Circular Progress -->
        <ProgressBar
            android:id="@+id/circularProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:progressDrawable="@drawable/circular_progress"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <!-- Loading Percentage -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Horizontal Progress Bar -->
        <ProgressBar
            android:id="@+id/horizontalProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:progressTint="@color/light_blue"
            android:progressBackgroundTint="@color/white_transparent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <!-- Loading Tip -->
        <TextView
            android:id="@+id/tipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menyiapkan aplikasi..."
            android:textSize="14sp"
            android:textColor="@color/white_transparent"
            android:maxLines="2"
            android:gravity="center"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Decorative Elements -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-40dp"
        android:src="@drawable/decorative_circle"
        android:alpha="0.1"
        android:rotation="45" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-30dp"
        android:layout_marginStart="-30dp"
        android:src="@drawable/decorative_circle"
        android:alpha="0.05"
        android:rotation="-30" />

</RelativeLayout>