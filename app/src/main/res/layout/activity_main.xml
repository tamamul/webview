<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- WebView Layout (Visible when online) -->
    <LinearLayout
        android:id="@+id/webview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <WebView
            android:id="@+id/activity_main_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!-- Offline Layout (Visible when offline) -->
    <LinearLayout
        android:id="@+id/offline_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@android:color/white">

        <!-- Offline Icon (optional) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:tint="#FF9800"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/offline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Ada Koneksi Internet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/offline_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periksa koneksi internet Anda dan coba lagi."
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coba Lagi"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </LinearLayout>

</RelativeLayout>