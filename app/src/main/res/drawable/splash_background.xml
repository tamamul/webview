<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- True black base (AMOLED killer) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Deep cyan gradient (premium core) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#022C2C"
                android:centerColor="#083344"
                android:endColor="#0E7490" />
        </shape>
    </item>

    <!-- Cyan glow light sweep -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#33ECFEFF"
                android:centerColor="#15ECFEFF"
                android:endColor="#00ECFEFF" />
        </shape>
    </item>

    <!-- Premium vignette (focus effect) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1200"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#00000000"
                android:endColor="#88000000" />
        </shape>
    </item>

</layer-list>