<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base deep color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#020617" />
        </shape>
    </item>

    <!-- Main premium gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0F172A"
                android:centerColor="#111827"
                android:endColor="#1E293B" />
        </shape>
    </item>

    <!-- Soft highlight (depth effect) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="30%"
                android:centerY="20%"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

</layer-list>